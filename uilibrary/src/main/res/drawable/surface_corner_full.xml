<?xml version="1.0" encoding="utf-8"?><!--    注意：selector中各个state状态的顺序是会影响实际效果-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="?attr/colorSurfaceVariant" tools:ignore="PrivateResource" />
            <!--                <solid android:color="@color/md_theme_light_surface"/>-->
            <corners android:radius="@dimen/corner_full" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="?attr/colorSurfaceVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_full" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="?attr/colorSurfaceVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_full" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="?attr/colorSurfaceVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_full" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="?attr/colorSurface" />
            <!--    <solid android:color="@color/md_theme_light_surfaceVariant"/>-->
            <corners android:radius="@dimen/corner_full" />
        </shape>
    </item>

</selector>