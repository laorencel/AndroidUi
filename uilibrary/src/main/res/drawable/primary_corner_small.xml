<?xml version="1.0" encoding="utf-8"?><!--    注意：selector中各个state状态的顺序是会影响实际效果-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_pressed="true">
        <shape >
            <solid android:color="?attr/colorPrimaryVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_small" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape >
            <solid android:color="?attr/colorPrimaryVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_small" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape >
            <solid android:color="?attr/colorPrimaryVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_small" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape >
            <solid android:color="?attr/colorPrimaryVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_small" />
        </shape>
    </item>

    <item>
        <!--        矩形（rectangle）、椭圆（oval）、线（line）、圆环（ring）     -->
        <shape >
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="@dimen/corner_small" />
        </shape>
    </item>

</selector>