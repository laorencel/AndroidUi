<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:color="?attr/colorOnPrimary" android:state_pressed="true">
        <shape>
            <solid android:color="?attr/colorPrimaryVariant" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_extra_small" />
        </shape>
    </item>

    <item android:color="?attr/colorOnPrimary" android:state_focused="true">
        <shape>
            <solid android:color="?attr/colorPrimary" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_extra_small" />
        </shape>
    </item>

    <item android:color="?attr/colorOnPrimary" android:state_selected="true">
        <shape>
            <solid android:color="?attr/colorPrimary" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_extra_small" />
        </shape>
    </item>

    <item android:state_checked="true" android:color="?attr/colorOnPrimary" >
        <shape>
            <solid android:color="?attr/colorPrimary" tools:ignore="PrivateResource" />
            <corners android:radius="@dimen/corner_extra_small" />
        </shape>
    </item>

    <item android:color="?attr/colorOnSurface">
        <!--        矩形（rectangle）、椭圆（oval）、线（line）、圆环（ring）     -->
        <shape>
            <solid android:color="?attr/colorSurface" />
            <corners android:radius="@dimen/corner_extra_small" />
        </shape>
    </item>
</selector>