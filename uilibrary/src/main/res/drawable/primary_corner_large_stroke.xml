<?xml version="1.0" encoding="utf-8"?><!--    注意：selector中各个state状态的顺序是会影响实际效果-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/divider_thickness" android:color="?attr/colorPrimaryVariant" />
            <corners android:radius="@dimen/corner_large" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke android:width="@dimen/divider_thickness" android:color="?attr/colorPrimaryVariant" />
            <corners android:radius="@dimen/corner_large" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <stroke android:width="@dimen/divider_thickness" android:color="?attr/colorPrimaryVariant" />
            <corners android:radius="@dimen/corner_large" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <stroke android:width="@dimen/divider_thickness" android:color="?attr/colorPrimaryVariant" />
            <corners android:radius="@dimen/corner_large" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="@dimen/divider_thickness" android:color="?attr/colorPrimary" />
            <corners android:radius="@dimen/corner_large" />
        </shape>
    </item>

</selector>